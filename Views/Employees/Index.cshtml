@model IEnumerable<DatabaseWebApp.Models.Employees>

@{
    ViewData["Title"] = "Employee Database";
}

<h1>Employee Database</h1>

<table class="table mt-4 mb-3">
    <thead>
        <tr>
            <th>
                Employee Name
            </th>
            <th>
                Employee Position
            </th>
            <th>
                Salary
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p class="mt-3">
    <a asp-action="Create">Create New Employee</a><br />
    *Note: requires log in
</p>